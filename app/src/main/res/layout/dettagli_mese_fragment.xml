<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--TITOLO-->
    <TextView
        android:id="@+id/nomeMeseDettagli"
        style="@style/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/annoMeseDettagli"
        style="@style/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/nomeMeseDettagli"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/meseApertoDettagliMese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/annoMeseDettagli"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/annoMeseDettagli"
        app:layout_constraintTop_toTopOf="@+id/annoMeseDettagli"
        app:srcCompat="@drawable/ic_locked"
        tools:ignore="ContentDescription" />

    <!--SEPARATOR-->
    <View
        android:id="@+id/divider7"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/nomeMeseDettagli"
        app:layout_constraintTop_toBottomOf="@+id/annoMeseDettagli"
        app:layout_constraintVertical_bias="0.0" />

    <!--INGRESSI USCITE-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewRimanenze"
        style="@style/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nomeMeseDettagli"
        app:layout_constraintTop_toBottomOf="@+id/divider7"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/labelIntroitiDettagliMese"
                style="@style/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/introiti"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/introitiValueDettagliMese"
                style="@style/simpleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="32dp"
                android:textAlignment="center"
                android:textColor="@color/colorAccentDark"
                app:layout_constraintBottom_toBottomOf="@+id/labelIntroitiDettagliMese"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/labelIntroitiDettagliMese"
                app:layout_constraintTop_toTopOf="@+id/labelIntroitiDettagliMese" />

            <TextView
                android:id="@+id/labelSpeseDettagliMese"
                style="@style/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/spese"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/labelIntroitiDettagliMese"
                app:layout_constraintHorizontal_bias="0.466"
                app:layout_constraintStart_toStartOf="@+id/labelIntroitiDettagliMese"
                app:layout_constraintTop_toBottomOf="@+id/labelIntroitiDettagliMese"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/speseValueDettagliMese"
                style="@style/simpleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textAlignment="center"
                android:textColor="@color/red"
                app:layout_constraintBottom_toBottomOf="@+id/labelSpeseDettagliMese"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/introitiValueDettagliMese"
                app:layout_constraintTop_toTopOf="@+id/labelSpeseDettagliMese" />

            <TextView
                android:id="@+id/labelSaldoDettagliMese"
                style="@style/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/saldo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/labelSpeseDettagliMese"
                app:layout_constraintStart_toStartOf="@+id/labelSpeseDettagliMese"
                app:layout_constraintTop_toBottomOf="@+id/divider8"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/saldoValueDettagliMese"
                style="@style/simpleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/colorAccentDark"
                app:layout_constraintBottom_toBottomOf="@+id/labelSaldoDettagliMese"
                app:layout_constraintEnd_toEndOf="@+id/speseValueDettagliMese"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/speseValueDettagliMese"
                app:layout_constraintTop_toTopOf="@+id/labelSaldoDettagliMese" />

            <View
                android:id="@+id/divider8"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/introitiValueDettagliMese"
                app:layout_constraintStart_toStartOf="@+id/labelSpeseDettagliMese"
                app:layout_constraintTop_toBottomOf="@+id/labelSpeseDettagliMese"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!--NUMERO ENTRATE USCITE-->
    <androidx.cardview.widget.CardView
        android:id="@+id/nEntrateUscite"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/cardView"
        android:layout_marginVertical="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardViewRimanenze"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardViewRimanenze"
        app:layout_constraintTop_toTopOf="@+id/cardViewRimanenze" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/labelNEntrateDettagliMese"
                style="@style/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="@string/n_entrate"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/valueNEntrateDettagliMese"
                style="@style/simpleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccentDark"
                app:layout_constraintBottom_toBottomOf="@+id/labelNEntrateDettagliMese"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/labelNEntrateDettagliMese"
                app:layout_constraintTop_toTopOf="@+id/labelNEntrateDettagliMese" />

            <TextView
                android:id="@+id/labelNUsciteDettagliMese"
                style="@style/header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="@string/n_uscite"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/labelNEntrateDettagliMese"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/labelNEntrateDettagliMese"
                app:layout_constraintTop_toBottomOf="@+id/labelNEntrateDettagliMese"
                app:layout_constraintVertical_bias="0.98" />

            <TextView
                android:id="@+id/valueNUsciteDettagliMese"
                style="@style/simpleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/red"
                app:layout_constraintBottom_toBottomOf="@+id/labelNUsciteDettagliMese"
                app:layout_constraintEnd_toEndOf="@+id/valueNEntrateDettagliMese"
                app:layout_constraintStart_toStartOf="@+id/valueNEntrateDettagliMese"
                app:layout_constraintTop_toTopOf="@+id/labelNUsciteDettagliMese" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!--GRAFICO-->
    <androidx.cardview.widget.CardView
        android:id="@+id/graficoWrapper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nEntrateUscite"
        app:layout_constraintStart_toStartOf="@+id/cardViewRimanenze"
        app:layout_constraintTop_toBottomOf="@+id/nEntrateUscite">



        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/graficoDettagliMese"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>